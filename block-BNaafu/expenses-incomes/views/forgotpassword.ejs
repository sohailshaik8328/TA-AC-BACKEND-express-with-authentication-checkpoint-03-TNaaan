<main class="w-full h-screen flex justify-center items-center" >
    <div class="w-4/12">
        <form action="/users/login/forgotpassword" method="POST" class="py-16 px-8 border-2 rounded-lg bg-white relative">
            <h2>Please Enter your registered Email</h2>
            <% if(error) {%>
                <p class="text-red-400"><%=error  %> </p>
            <% } %> 
            <% if(info) { %>
                <h3 class="text-green-500 font-bold"><%= info %></h3>
            <% } %>
            <input class="w-full py-3 outline-none px-4 border-2 rounded-lg mt-4" type="email" name="email" placeholder="Enter your email">
            <input type="submit" value="Send Verification Code" class="w-full py-3 outline-none px-4 border-2 rounded-lg mt-4">
        </form>
    </div>
</main>